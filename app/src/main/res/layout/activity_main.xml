                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="@string/default_timeslot_text" />

            <Button
                android:id="@+id/time2"
                android:layout_width="match_parent"
